{% extends "SruCoreBundle:FrontOffice:layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {{ parent() }}

    <div class="container well">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

            <div class="col-sm-6" style="border-right: 1px dashed #AAA;">
                <h2>CRÉER VOTRE COMPTE</h2>
                <hr>

                <div class="form-group">
                    {% if form_errors(form.username) %}
                        <div class="alert alert-danger"> {{ form_errors(form.username) }}</div>
                    {% endif %}
                    {{ form_label(form.username, 'Pseudo') }}
                    {{ form_widget(form.username, {'attr' : {'class' : 'form-control'} }) }}

                </div>
                <div class="form-group">
                    {% if form_errors(form.email) %}
                        <div class="alert alert-danger"> {{ form_errors(form.email) }}</div>
                    {% endif %}
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control'} }) }}

                </div>

                <div class="form-group">
                    {% if form_errors(form.plainPassword.first) %}
                        <div class="alert alert-danger"> {{ form_errors(form.plainPassword.first) }} </div>
                    {% endif %}
                    {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                    {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control'} }) }}
                </div>

                <div class="form-group">
                    {% if form_errors(form.plainPassword.second) %}
                        <div class="alert alert-danger"> {{ form_errors(form.plainPassword.second) }}</div>
                    {% endif %}
                    {{ form_label(form.plainPassword.second, 'Vérification du mot de passe') }}
                    {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'} }) }}
                </div>
                {{ form_rest(form) }}
                <div>
                    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />
                </div>

            </div>

        </form>





        {{ render(controller('FOSUserBundle:Security:login')) }}
    </div>

{% endblock %}