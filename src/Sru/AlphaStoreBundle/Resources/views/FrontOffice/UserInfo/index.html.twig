{% extends "SruCoreBundle:FrontOffice:layout.html.twig" %}

{% block body %}
    {{ parent() }}
    <h1>UserInfo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Street</th>
                <th>Zipcode</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Defaultinfo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('profil_informations_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.zipCode }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.defaultInfo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('profil_informations_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('profil_informations_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('profil_informations_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
