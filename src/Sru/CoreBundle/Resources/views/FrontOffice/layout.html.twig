{% extends "::base.html.twig" %}

    {% block title %}
        {{ parent() }}
    {% endblock %}

    {% block stylesheets %}

        <script src="{{ asset('bundles/srucore/js/Jquery.js') }}"></script>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/foundation.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/normalize.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/foundation-icons.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/foundation.custom.css') }}"/>

        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/slider.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/jquery.bxslider.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/srucore/css/slick.css') }}"/>

        <script src="{{ asset('bundles/srucore/js/vendor/modernizr.js') }}"></script>


    {% endblock %}


    {% block navbar %}
        {{ parent() }}

    <div class="sticky">


        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <li class="name">
                    <h1><a href="#">ShowRoomUnivers</a></h1>
                </li>
                <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
                <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>

            </ul>


            <section class="top-bar-section">
                <!-- Left Nav Section -->

                <ul class="left">

                    <li class="active"><a href="{{ path("sru_core_homepage") }}">Accueil</a></li>
                    {% if is_granted("ROLE_ADMIN") %}
                         <li class=""><a href="{{ path('sru_core_admin') }}">Administration</a></li>
                    {% endif %}


                </ul>

                <!-- Right Nav Section -->
                <ul class="right">
                    {% if not is_granted("ROLE_ADMIN") %}
                    <li class="divider"></li>
                    {{ render(controller("SruCoreBundle:Cart:resume")) }}
                    {% endif %}
                    <li class="divider"></li>
                    {% if not app.user %}
                        <li class="has-form"><a href="{{ path('authentication') }}" class="button success"><i class="fi-power"></i> &nbsp;S'authentifier</a>


                    {% else %}

                        <li class="has-form"><a href="{{ path('fos_user_profile_show') }}" class="button"><i class="fi-torso"></i> &nbsp; {{ app.user.lastname|upper ~ " "~ app.user.firstname|capitalize }}</a></li>
                        <li class="divider"></li>
                        <li class="has-form"><a href="{{ path('fos_user_security_logout') }}" class="button alert"><i class="fi-power"></i> &nbsp;Se déconnecter</a>
                        </li>

                    {% endif %}
                </ul>
            </section>
        </nav>
    </div>


        <div class="icon-bar three-up second-bar" style="">

            <a class="item all-univers">
                <i class="fi-record"></i>
                <label>Univers</label>
            </a>


            <a class="item search">
                <i class="fi-magnifying-glass "></i>
                <label>Recherche</label>

            </a>
            <a class="item">
                <i class="fi-ticket"></i>
                <label>Promotions</label>
            </a>
        </div>


        <div class="second-menu menu-univers" style="width: 100%; background: rgba(0,0,0,0.9); display: none;">
                <br>
                <div class="row small-12">
                    <div class="small-4 columns">&nbsp;</div>
                    <h3 style="color:#FFF;" class="small-4 columns text-center">Univers</h3>
                    <div style="color:#FFF; font-size: 25px;" class="small-4 columns text-right"><i style="cursor: pointer;" class="fi-x-circle all-univers"></i></div>

                </div>

            <br><br><br>
            <div class="row" style="color:#FFF;">

                    {{ render(controller("SruCoreBundle:Category:resume")) }}
                <br><br><br>

                <div class="button all-univers alert large small-12">
                    Fermer cet onglet
                </div>
             </div>
        </div>

        <div class="second-menu menu-search" style="width: 100%; background: rgba(0,0,0,0.9); display: none;">
            <br>
            <div class="row small-12">
                <div class="small-4 columns">&nbsp;</div>
                <h3 style="color:#FFF;" class="small-4 columns text-center">Recherche</h3>
                <div class="small-4 columns">&nbsp;</div>

            </div>


            <form action="{{ path('search') }}" method="post">
                <div class="row collapse">

                    <div class="small-10 columns">
                        <input name="keywords" pattern=".{3,}" required title="3 lettres minimum" type="text" style="font-size: 25px;"/>
                    </div>
                    <div class="small-2 columns">
                        <button class="postfix" style="font-size: 16px; color: #FFF;">
                            Rechercher
                        </button>
                    </div>
                </div>
            </form>


            <div class="row" style="color:#FFF;">

                <br><br><br>

                <div class="button search alert large small-12">
                    Fermer cet onglet
                </div>
            </div>
        </div>

        {{ render(controller("SruCoreBundle:Slideshow:resume")) }}


        {% endblock %}



        {% block body %}
        {{ parent() }}


        <div class="row">
            <br><br>
            {% block content %}

            {% endblock %}
        </div>


{% endblock %}


