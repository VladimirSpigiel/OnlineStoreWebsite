{% extends "SruCoreBundle:FrontOffice:layout.html.twig" %}

    {% block title %}
        {{ parent() }}
    {% endblock %}

    {% block stylesheets %}
        {{ parent() }}

    {% endblock %}


    {% block body %}
        {{ parent() }}
    <br><br>
        <form method="post" action="{{ path('order_step', {step:'confirm'}) }}">


    <div class="row">
        <h2 class="">Mode de paiement</h2>
        <hr>
        <div class="panel large-12 columns">
            <div class="large-3 columns text-center">
                <input type="radio" name="method" disabled> &nbsp; <i class="fi-paypal" style="font-size: 25px;"></i> Paypal
            </div>
            <div class="large-3 columns text-center">
                <input type="radio" name="method" disabled> &nbsp; <i class="fi-credit-card" style="font-size: 25px;"></i> Carte bancaire
            </div>
            <div class="large-3 columns text-center">
                <input type="radio" name="method" value="cheque" checked> &nbsp; <i class="fi-page-edit" style="font-size: 25px;"></i> Ch√®que
            </div>
            <div class="large-3 columns text-center">
                <input type="radio" name="method" disabled> &nbsp; <i class="fi-euro" style="font-size: 25px;"></i> Virement bancaire
            </div>

        </div>

            <div class="row">
                <hr>
                <a href="{{ path('cart') }}" class="button left alert">Retour au panier</a>
                <button type="submit" class="button right">Suivant</button>
            </div>

        </form>
    {% endblock %}


    {% block javascripts %}
        {{ parent() }}
         <script>
             $(function(){
                 $("input[name='delivery']").change(function(){

                     $("input[id='i"+$(this).val()+"']").click();
                 })
             })
         </script>
    {% endblock %}