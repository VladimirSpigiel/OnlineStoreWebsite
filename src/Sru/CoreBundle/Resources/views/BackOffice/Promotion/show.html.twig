{% extends "SruCoreBundle:BackOffice:layout.html.twig" %}

{% block content %}
    {{ parent() }}
    <h1>Promotion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Beginatdate</th>
                <td>{{ entity.beginAtDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Expireatdate</th>
                <td>{{ entity.expireAtDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ entity.min }}</td>
            </tr>
            <tr>
                <th>Reduction</th>
                <td>{{ entity.reduction }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_promotion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_promotion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
