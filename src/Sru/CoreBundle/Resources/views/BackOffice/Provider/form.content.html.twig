


<div class="well col-sm-8 provider" >
    <div class="form-group">
        {% if form_errors(form.name) %}
            <div class="alert alert-danger">
                {{ form_errors(form.name) }}
            </div>
        {% endif %}

        {{ form_label(form.name, 'Nom') }}
        {{ form_widget(form.name, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.siret) %}
            <div class="alert alert-danger">
                {{ form_errors(form.siret) }}
            </div>
        {% endif %}
        {{ form_label(form.siret, 'Nr Siret') }}
        {{ form_widget(form.siret, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.memo) %}
            <div class="alert alert-danger">
                {{ form_errors(form.memo) }}
            </div>
        {% endif %}
        {{ form_label(form.memo, 'Mémo') }}
        {{ form_widget(form.memo, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.transport) %}
            <div class="alert alert-danger">
                {{ form_errors(form.transport) }}
            </div>
        {% endif %}
        {{ form_label(form.transport, 'Transport') }}
        <br>
        {{ form_widget(form.transport, {'attr' : {'class' : 'form-control transport'} }) }}

    </div>

</div>
<div class="well col-sm-8 provider" >

    <div class="form-group">
        {% if form_errors(form.street) %}
            <div class="alert alert-danger">
                {{ form_errors(form.street) }}
            </div>
        {% endif %}
        {{ form_label(form.street, 'Adresse (Nr + rue)') }}
        {{ form_widget(form.street, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.zipCode) %}
            <div class="alert alert-danger">
                {{ form_errors(form.zipCode) }}
            </div>
        {% endif %}
        {{ form_label(form.zipCode, 'Code postal') }}
        {{ form_widget(form.zipCode, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.city) %}
            <div class="alert alert-danger">
                {{ form_errors(form.city) }}
            </div>
        {% endif %}
        {{ form_label(form.city, 'Ville') }}
        {{ form_widget(form.city, {'attr' : {'class' : 'form-control'} }) }}

    </div>

    <div class="form-group">
        {% if form_errors(form.country) %}
            <div class="alert alert-danger">
                {{ form_errors(form.country) }}
            </div>
        {% endif %}
        {{ form_label(form.country, 'Pays') }}
        {{ form_widget(form.country, {'attr' : {'class' : 'form-control'} }) }}

    </div>



    <div class="form-group">

        {{ form_label(form.picture, 'Image') }}
        <br>
        <h4> Glissez déposez vos images sur cet onglet </h4>
        <br>

        <div class="picturesInfo">

        </div>

        <input type="hidden" class="pictures" name="pictures">
        <div class="preview">
            {% if entity.picture %}
            {% if entity.picture.defaultPicture == false %}
            <div class='img-thumbnail thumbnail' data-default='' data-id='{{ entity.picture.id }}'>
                {% else %}
                <div class='img-thumbnail thumbnail default' data-default='default' data-id='{{ entity.picture.id }}'>
                    {% endif %}
                    <div>
                        {% if entity.picture.defaultPicture == false %}
                            <button class='btn btn-success pull-left makeDefault'><span class='glyphicon glyphicon-pushpin'></span></button>
                        {% else %}
                            <button class='btn btn-default pull-left makeDefault'><span class='glyphicon glyphicon-pushpin'></span></button>

                        {% endif %}
                        <button class='btn btn-danger pull-right remove'><span class='glyphicon glyphicon-remove'></span></button>

                    </div>
                    <img class='img-responsive' src='{{ asset('bundles/srucore/images/') ~ entity.picture.name }}'>

                    <input class='form-control text-center' value='{{ entity.picture.name }}'>
                </div>

            </div>
            {% endif %}
        </div>

    </div>

</div>


<script>

    $(function($){

        $('.transport').multiselect({
            'buttonClass':'btn btn-primary',
            'nonSelectedText' : 'Aucun choix',
            'nSelectedText' : "choix"
        });

        new DropFile(".provider",
                false,
                '{{ path('admin_picture_upload') }}',
                '{{ asset('bundles/srucore/images') }}',
                '{{ path('admin_picture_delete', {id:"PLACEHOLDER"}) }}'
        );

    })


</script>