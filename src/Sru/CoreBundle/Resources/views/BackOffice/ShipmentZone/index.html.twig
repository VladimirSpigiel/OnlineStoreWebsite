{% extends "SruCoreBundle:BackOffice:layout.html.twig" %}

{% block content %}
    {{ parent() }}
    <h1>Gestion des zones de livraison</h1>
    <hr>

    <a href="{{ path('admin_shipmentZone_new') }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span>&nbsp; Cr√©er une zone de livraison</a>
    <div class="text-center"> {{ knp_pagination_render(entities) }}</div>

<form method="post" action="{{ path('admin_shipmentZone_options') }}">



    {% include "SruCoreBundle:BackOffice/Filter:checkbox.html.twig"
    %}
    <br>
    <div class="table-responsive">
        <table class="table table-bordered text-left table-striped table-hover">
            <thead class="bg-primary">
            <tr>
                <th class="text-center"><input type="checkbox" class="selectAll"  ></th>
                <th>
                    {% include "SruCoreBundle:BackOffice/Filter:header.html.twig"
                    with {'name' : "Zone", "field" : "zone"} %}

                </th>

                <th class="text-center">Modifier</th>
                <th class="text-center">Supprimer</th>

            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="text-center"><input type="checkbox" class="checker" name="entity[]" value="{{ entity.id }}"></td>

                    <td>{{ entity.zone }}</td>

                    <td class="text-center">
                        <a href="{{ path('admin_shipmentZone_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil text-warning"></span></a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('admin_shipmentZone_delete', { 'id': entity.id }) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer {{ entity.zone }} ?')">
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% include "SruCoreBundle:BackOffice/Filter:checkbox.html.twig"
    %}

    </form>

    <div class="text-center"> {{ knp_pagination_render(entities) }}</div>
{% endblock %}
