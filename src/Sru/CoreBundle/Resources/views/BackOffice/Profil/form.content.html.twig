<div class="col-sm-10">
    {{ render(controller("SruCoreBundle:Profil:informationPaths")) }}
</div>

<div class="well col-sm-10">
    <div class="col-sm-4">
        <div class="form-group">
            {% if form_errors(form.libelle) %}
            <div class="alert alert-danger">
                {{ form_errors(form.libelle) }}
            </div>
            {% endif %}
            {{ form_label(form.libelle, 'Libelle') }}
            {{ form_widget(form.libelle, {'attr' : {'class' : 'form-control'} }) }}

        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            {% if form_errors(form.description) %}
            <div class="alert alert-danger">
                 {{ form_errors(form.description) }}
            </div>
            {% endif %}
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr' : {'class' : 'form-control'} }) }}

        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            {% if form_errors(form.role) %}
            <div class="alert alert-danger">
                {{ form_errors(form.role) }}
            </div>
            {% endif %}
            {{ form_label(form.role, 'Roles') }}<br>
            {{ form_widget(form.role, {'attr' : {'class' : 'form-control roles'} }) }}
        </div>
    </div>

</div>