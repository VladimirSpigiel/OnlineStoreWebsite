{% extends "SruCoreBundle:BackOffice:layout.html.twig" %}

{% block content %}
    {{ parent() }}
    <h1>Gestion du carousel</h1>
    <hr>

    {% if entities|length == 0 %}
    <a href="{{ path('admin_slideshow_new') }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span>&nbsp; Cr√©er un carousel</a>

    {% endif %}


           <br><br>
        <div class="table-responsive">
            <table class="table table-bordered text-left table-striped table-hover">
                <thead class="bg-primary">
                <tr>

                    <th class="col-lg-10">


                      Images
                    </th>

                    <th class="text-center col-lg-1">Modifier</th>
                    <th class="text-center col-lg-1">Supprimer</th>

                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>

                            {% for promotion in entity.promotion %}
                                {% if promotion.picture %}
                                    <img src="{{ asset('bundles/srucore/images/') ~ promotion.picture.name }}" height="100px">
                                {% endif %}
                            {% endfor %}


                            {% for picture in entity.picture %}
                               <img src="{{ asset('bundles/srucore/images/') ~ picture.name }}" height="100px">
                            {% endfor %}


                        </td>



                        <td class="text-center">
                            <a href="{{ path('admin_slideshow_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil text-warning"></span></a>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_slideshow_delete', { 'id': entity.id }) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer ?')">
                                <span class="glyphicon glyphicon-remove text-danger"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

{% endblock %}
